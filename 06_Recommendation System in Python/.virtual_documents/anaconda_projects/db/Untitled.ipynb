from sklearn.neighbors import NearestNeighbors



from sklearn.neighbors import NearestNeighbors

def recommend_similar(movie_title, df, X, movie_mapper, movie_inv_mapper, k=5):
    movie_id = df[df['title'] == movie_title]['movieId'].values[0]
    movie_idx = movie_mapper[movie_id]
    movie_vec = X[movie_idx]

    model = NearestNeighbors(metric='cosine', algorithm='brute')
    model.fit(X)

    distances, indices = model.kneighbors(movie_vec, n_neighbors=k+1)

    similar_movies = []
    for i in indices.flatten()[1:]:
        similar_movies.append(movie_inv_mapper[i])

    recommended_titles = df[df['movieId'].isin(similar_movies)]['title'].unique()
    
    return recommended_titles



